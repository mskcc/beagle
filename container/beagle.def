    export BEAGLE_CELERY_RUNNER=`ps auxww | grep 'celery' | grep $BEAGLE_CELERY_RUNNER_PID_FILE | grep -v 'grep' | awk '{print $2}' | wc -l`
    export BEAGLE_CELERY_NATS_UPSERT_REQUEST=`ps auxww | grep 'celery' | grep $BEAGLE_CELERY_NATS_UPSERT_REQUEST_PID_FILE | grep -v 'grep' | awk '{print $2}' | wc -l`
