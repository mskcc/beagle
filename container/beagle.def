    export BEAGLE_CELERY_NATS_UPDATE_REQUEST=`ps auxww | grep 'celery' | grep $BEAGLE_CELERY_NATS_UPDATE_REQUEST_PID_FILE | grep -v 'grep' | awk '{print $2}' | wc -l`

